# Scarmonit Web Portal - Environment Variables
# Copy this file to .env and update values for your environment

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
VITE_APP_NAME=Scarmonit Control Center
VITE_APP_VERSION=1.0.0

# ===========================================
# API ENDPOINTS
# ===========================================
VITE_API_URL=https://agent-api.scarmonit.workers.dev
VITE_AGENT_URL=https://agent.scarmonit.com
VITE_MCP_SERVER_URL=ws://localhost:3000

# ===========================================
# FEATURE FLAGS
# ===========================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_MONITORING=true
VITE_ENABLE_PWA=false

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
VITE_CACHE_ENABLED=true
VITE_HEALTH_CHECK_INTERVAL=30000
VITE_REQUEST_TIMEOUT=5000

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=https://scarmonit.com,https://*.scarmonit.com

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://xxx@sentry.io/xxx

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# VITE_MOCK_API=false
# VITE_LOG_LEVEL=info

